               </padding>
            </HBox>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button layoutX="59.0" layoutY="75.0" onAction="#rollDice" prefHeight="51.0" prefWidth="53.0" text="Roll" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
      <GridPane fx:id="grid" hgap="15.0">
        <columnConstraints>
